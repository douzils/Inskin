<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NFC (si l’app lit des tags) -->
    <uses-permission android:name="android.permission.NFC"/>

    <!-- USB Host pour le Proxmark -->
    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:icon="@mipmap/ic_launcher"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Inskin">

        <!-- Activité principale (rend l’app lançable) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Réception attach/detach USB + retour de la demande de permission -->
        <receiver
            android:name=".usb.UsbAttachReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED"/>
                <action android:name="android.hardware.usb.action.USB_DEVICE_DETACHED"/>
                <!-- action custom utilisée par PendingIntent -->
                <action android:name="com.inskin.app.USB_PERMISSION"/>
            </intent-filter>
        </receiver>

    </application>
</manifest>
