import androidx.compose.ui.Alignment
import androidx.compose.foundation.layout.*
import androidx.compose.ui.unit.dp
import kotlinx.coroutines.flow.StateFlow

@OptIn(ExperimentalMaterial3Api::class)
@Composable
fun HomeScreen(tagInfoFlow: StateFlow<TagInfo?>, onOpenDetails: () -> Unit) {
    val tag by tagInfoFlow.collectAsState()
    LaunchedEffect(tag?.uid) { if (tag != null) onOpenDetails() }

    Scaffold(topBar = { CenterAlignedTopAppBar(title = { Text("SCANNEZ LE TAG") }) }) { padding ->
        Box(Modifier.fillMaxSize().padding(padding), contentAlignment = Alignment.Center) {
            Icon(Icons.Filled.Nfc, contentDescription = null, modifier = Modifier.size(180.dp))
        }
    }
}




